{
  "name": "solana-collider-beta",
  "version": "1.0.0-beta",
  "license": "MIT",
  "dependencies": {
    "@coral-xyz/anchor": "^0.29.0",
    "@solana/spl-token": "^0.4.0",
    "@solana/web3.js": "^1.98.0",
    "@types/chai": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/mocha": "^10.0.0",
    "chai": "^5.1.2",
    "dotenv": "^16.4.7",
    "fs": "^0.0.1-security",
    "glob": "^11.0.1",
    "mocha": "^10.0.0",
    "punycode": "^2.3.1",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.0.0",
    "typescript": "^5.7.3"
  },
  "type": "module",
  "scripts": {
    "env": "bash install.sh || curl --proto '=https' --tlsv1.2 -sSfL https://raw.githubusercontent.com/antitokens/solana-collider/main/install.sh | bash",
    "clean-lock": "sh -c \"if [[ $(uname) == 'Darwin' ]]; then sed -i '' 's/version = 4/version = 3/' Cargo.lock; else sed -i 's/version = 4/version = 3/' Cargo.lock; fi\"",
    "build-anchor": "yarn clean-lock && anchor build",
    "build-anchor-full": "yarn clean-lock && RUST_LOG=trace anchor build",
    "build-cargo": "yarn clean-lock && cargo build-bpf",
    "build-cargo-full": "yarn clean-lock && RUST_LOG=trace cargo build-bpf",
    "build-verify": "yarn clean-lock && anchor build --verifiable",
    "test-anchor": "anchor test",
    "test-anchor-full": "RUST_LOG=trace anchor test",
    "test-anchor-fast": "RUST_LOG=trace anchor test --skip-build --skip-deploy",
    "test-cargo": "RUST_LOG=error cargo test-sbf",
    "test-cargo-log": "RUST_LOG=info cargo test-sbf -- --nocapture",
    "test-cargo-debug": "RUST_LOG=debug cargo test-sbf",
    "test-cargo-full": "RUST_LOG=trace cargo test-sbf",
    "prepare-prod": "node postbuild/prepare/index.js",
    "query-txt": "query-security-txt target/deploy/collider_beta.so",
    "validator": "solana-test-validator",
    "validator-new": "solana-test-validator -r --deactivate-feature EenyoWx9UMXYKpR8mW5Jmfmy2fRjzUtM7NduYMY8bx33",
    "deploy": "anchor deploy",
    "setup": "bash postbuild/initialise/setup.sh",
    "initialise": "node --loader ts-node/esm postbuild/initialise/index.ts",
    "admin": "node --loader ts-node/esm postbuild/admin/index.ts",
    "create-new": "node --loader ts-node/esm postbuild/create/index.ts",
    "deposit": "node --loader ts-node/esm postbuild/deposit/index.ts",
    "equalise": "node --loader ts-node/esm postbuild/equalise/index.ts",
    "withdraw-bulk": "node --loader ts-node/esm postbuild/withdraw/bulk_withdraw/index.ts",
    "withdraw-single": "node --loader ts-node/esm postbuild/withdraw/user_withdraw/index.ts",
    "verify-admin": "node --loader ts-node/esm postbuild/admin/verifier.ts",
    "verify-initialise": "node --loader ts-node/esm postbuild/initialise/verifier.ts",
    "verify-create": "node --loader ts-node/esm postbuild/create/verifier.ts",
    "verify-deposit": "node --loader ts-node/esm postbuild/deposit/verifier.ts",
    "verify-equalise": "node --loader ts-node/esm postbuild/equalise/verifier.ts",
    "verify-withdraw-bulk": "node --loader ts-node/esm postbuild/withdraw/bulk_withdraw/verifier.ts",
    "verify-withdraw-single": "node --loader ts-node/esm postbuild/withdraw/user_withdraw/verifier.ts"
  }
}