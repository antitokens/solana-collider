{
  "compilerOptions": {
    "types": [
      "mocha"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "lib": [
      "ES2020",
      "dom"
    ],
    "module": "NodeNext",
    "target": "ES2020",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "moduleResolution": "nodenext",
    "noEmit": true,
    "skipLibCheck": true,
    "strict": true
  },
  "ts-node": {
    "esm": true
  }
}